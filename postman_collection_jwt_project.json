    {
      "name": "Login - Admin",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"AdminPass1!\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://localhost:8080/login", "protocol": "http", "host": [ "localhost" ], "port": "8080", "path": [ "login" ] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Capture JWT returned as raw text or JSON {\"token\": \"...\"}",
              "const token = pm.response.text().trim();",
              "if (token) {",
              "    pm.environment.set('jwt', token);",
              "    console.log('Saved jwt from raw response');",
              "} else {",
              "    try {",
              "        const body = pm.response.json();",
              "        if (body && body.token) { pm.environment.set('jwt', body.token); console.log('Saved jwt from JSON token'); }",
              "    } catch (e) { console.log('No token found in response'); }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
