{
  "info": {
    "_postman_id": "1a2b3c4d-5678-90ab-cdef-1234567890ab",
    "name": "jwt_project - API collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for registering, logging in and exercising protected endpoints (students) using JWT.\nAssumes server at http://localhost:8080"
  },
  "item": [
    {
      "name": "Register - Admin",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"AdminPass1!\",\n  \"roles\": [\"ADMIN\"]\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://localhost:8080/register", "protocol": "http", "host": [ "localhost" ], "port": "8080", "path": [ "register" ] }
      },
      "response": []
    },
    {
      "name": "Register - User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"Password123!\",\n  \"roles\": [\"USER\"]\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://localhost:8080/register", "protocol": "http", "host": [ "localhost" ], "port": "8080", "path": [ "register" ] }
      },
      "response": []
    },
    {
      "name": "Login - Admin",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"AdminPass1!\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://localhost:8080/login", "protocol": "http", "host": [ "localhost" ], "port": "8080", "path": [ "login" ] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Capture JWT returned as raw text or JSON {\"token\": \"...\"}",
              "const token = pm.response.text().trim();",
              "if (token) {",
              "    pm.environment.set('jwt', token.replace(/^\"|\"$/g, ''));",
              "    // admin expects success for both GET and POST todos",
              "    pm.environment.set('expected_todos_get_status', '200');",
              "    pm.environment.set('expected_todos_post_status', '200');",
              "    console.log('Saved jwt from raw response (admin)');",
              "} else {",
              "    try {",
              "        const body = pm.response.json();",
              "        if (body && body.token) { pm.environment.set('jwt', body.token); pm.environment.set('expected_todos_get_status', '200'); pm.environment.set('expected_todos_post_status', '200'); console.log('Saved jwt from JSON token (admin)'); }",
              "    } catch (e) { console.log('No token found in response'); }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Login - User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"Password123!\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://localhost:8080/login", "protocol": "http", "host": [ "localhost" ], "port": "8080", "path": [ "login" ] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const token = pm.response.text().trim();",
              "if (token) {",
              "    pm.environment.set('jwt', token.replace(/^\"|\"$/g, ''));",
              "    // normal user: can read todos but cannot create",
              "    pm.environment.set('expected_todos_get_status', '200');",
              "    pm.environment.set('expected_todos_post_status', '403');",
              "    console.log('Saved jwt from raw response (user)');",
              "} else {",
              "    try {",
              "        const body = pm.response.json();",
              "        if (body && body.token) { pm.environment.set('jwt', body.token); pm.environment.set('expected_todos_get_status', '200'); pm.environment.set('expected_todos_post_status', '403'); console.log('Saved jwt from JSON token (user)'); }",
              "    } catch(e){}",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Get Students (protected)",
      "request": {
        "auth": { "type": "bearer", "bearer": [ { "key": "token", "value": "{{jwt}}", "type": "string" } ] },
        "method": "GET",
        "header": [],
        "url": { "raw": "http://localhost:8080/students", "protocol": "http", "host": [ "localhost" ], "port": "8080", "path": [ "students" ] }
      },
      "response": []
    },
    {
      "name": "Add Student (protected)",
      "request": {
        "auth": { "type": "bearer", "bearer": [ { "key": "token", "value": "{{jwt}}", "type": "string" } ] },
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"id\": 3,\n  \"name\": \"charlie\",\n  \"marks\": 88\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "http://localhost:8080/students", "protocol": "http", "host": [ "localhost" ], "port": "8080", "path": [ "students" ] }
      },
      "response": []
    }
    ,
    {
      "name": "Get Todos (PERM_TODOS_READ)",
      "request": {
        "auth": { "type": "bearer", "bearer": [ { "key": "token", "value": "{{jwt}}", "type": "string" } ] },
        "method": "GET",
        "header": [],
        "url": { "raw": "http://localhost:8080/todos", "protocol": "http", "host": [ "localhost" ], "port": "8080", "path": [ "todos" ] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const expected = parseInt(pm.environment.get('expected_todos_get_status') || '200', 10);",
              "pm.test('Status is ' + expected, function () { pm.expect(pm.response.code).to.eql(expected); });",
              "if (expected === 200) {",
              "  pm.test('Response is array', function () { pm.expect(pm.response.json()).to.be.an('array'); });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Create Todo (PERM_TODOS_CREATE)",
      "request": {
        "auth": { "type": "bearer", "bearer": [ { "key": "token", "value": "{{jwt}}", "type": "string" } ] },
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"title\": \"Buy milk\",\n  \"content\": \"Remember to buy milk from store\"\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "http://localhost:8080/todos", "protocol": "http", "host": [ "localhost" ], "port": "8080", "path": [ "todos" ] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const expected = parseInt(pm.environment.get('expected_todos_post_status') || '200', 10);",
              "pm.test('Status is ' + expected, function () { pm.expect(pm.response.code).to.eql(expected); });",
              "if (expected === 200) {",
              "  pm.test('Created todo has id', function () { const body = pm.response.json(); pm.expect(body).to.have.property('id'); });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    }
  ]
}
